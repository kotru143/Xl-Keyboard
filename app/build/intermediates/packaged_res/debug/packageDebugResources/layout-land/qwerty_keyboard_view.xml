<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@color/black">

    <!-- Toggle + 123 Button Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button style="@style/KeyboardButton"
            android:id="@+id/btnToggleModeQwerty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="@color/toggle_inactive"
            android:text="@string/key_toggle_arrow"
            android:textSize="25dp" />

        <View
            android:layout_width="655dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:backgroundTint="@color/toggle_inactive" />

        <Button style="@style/KeyboardButton"
            android:id="@+id/btnsym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="@color/toggle_inactive"
            android:text="@string/key_sym"
            android:textSize="16sp" />

        <Button style="@style/KeyboardButton"
            android:id="@+id/btn123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/toggle_inactive"
            android:text="@string/key_123"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Row 1: Q W E R T Y U I O P -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button style="@style/KeyboardButton" android:id="@+id/btnQ" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="q" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnW" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="w" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnE" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="e" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnR" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="r" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnT" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="t" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnY" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="y" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnU" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="u" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnI" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="i" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnO" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="o" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnP" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="p" android:textSize="18sp" />
    </LinearLayout>

    <!-- Row 2: A S D F G H J K L -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">

        <Button style="@style/KeyboardButton" android:id="@+id/btnA" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="a" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnS" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="s" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnD" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="d" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnF" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="f" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnG" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="g" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnH" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="h" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnJ" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="j" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnK" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="k" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnL" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="l" android:textSize="18sp" />
    </LinearLayout>

    <!-- Row 3: Shift Z X C V B N M Backspace -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button style="@style/KeyboardButton" android:id="@+id/btnShift" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.5" android:text="â‡§" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnZ" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="z" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnX" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="x" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnC" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="c" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnV" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="v" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnB" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="b" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnN" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="n" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnM" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="m" android:textSize="18sp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnBackQwerty" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.5" android:text="@string/key_backspace" android:textSize="18sp" />
    </LinearLayout>

    <!-- Row 4: Dot Space Comma Enter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <Button style="@style/KeyboardButton" android:id="@+id/btnDotQwerty" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="@string/key_dot" android:textSize="18sp" android:minHeight="40dp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnSpaceQwerty" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3" android:text="@string/key_space" android:textSize="18sp" android:minHeight="40dp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnCommaQwerty" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_comma" android:textSize="18sp" android:minHeight="40dp" />
        <Button style="@style/KeyboardButton" android:id="@+id/btnEnterQwerty" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_enter" android:textSize="18sp" android:minHeight="40dp" />
    </LinearLayout>

</LinearLayout>
